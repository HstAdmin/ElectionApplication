@model Hst.Model.ViewModels.UserModel;
@{
    ViewData["Title"] = "VerifyOTP";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <form method="post" asp-controller="Account" aspcontroller="VerifyOTP" class="box">
                        <h1>OTP Verification</h1>
                        <p class="text-muted">An OTP has been sent to ur entered mobile number</p>
                       
                        <input asp-for="Otp" placeholder="Enter OTP Number" />
                        <span asp-validation-for="Otp" class="text-danger"></span>
                        <input type="submit" name="" value="Verify & Proceed" href="#">
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html> 