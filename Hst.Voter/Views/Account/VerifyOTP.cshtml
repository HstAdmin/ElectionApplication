@model Hst.Model.ViewModels.UserModel;
@{
    ViewData["Title"] = "VerifyOTP";
}

@{
    Layout = null;// "~/Views/Shared/_Layout.cshtml";
}




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Style.css" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <form method="post" asp-controller="Account" aspcontroller="VerifyOTP" class="box">
                        <h1>OTP Verification</h1>
                        <p class="text-muted">An OTP has been sent to your entered mobile number</p>
                        <input asp-for="Otp" placeholder="Enter OTP Number" />
                        <span asp-validation-for="Otp" class="text-danger"></span>
                        <input type="submit" name="" value="Verify & Proceed" href="#">
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script href="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
</body>
</html> 