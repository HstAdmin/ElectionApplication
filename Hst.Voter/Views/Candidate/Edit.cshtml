@model Hst.Model.Candidate
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2>Edit Candidate</h2>
        <hr />
        <div class="container-fluid" style="margin: auto; width: 50%; padding: 10px;">
            <div class="row">
                <div class="col-md-12">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.C_ID)

                    <div class="form-group">
                        <label class="control-label col-md-2">Name:</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.C_Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.C_Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Post:</label>
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.C_PostId, ViewBag.Post as List<SelectListItem>, "---Select---", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.C_PostId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Position:</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.C_PositionId, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                            @Html.ValidationMessageFor(model => model.C_PositionId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">MOBILE:</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.C_MobileNo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.C_MobileNo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">ADDRESS:</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.C_Address, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.C_Address, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">DESIG:</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.C_Designation, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.C_Designation, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink("Back to List", "CandidateList")
</div>