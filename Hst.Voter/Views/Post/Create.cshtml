@model Hst.Model.Post
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Post", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2>Create Post</h2>
        <hr />
        <div class="container-fluid" style="margin: auto; width: 50%; padding: 10px;">
            <div class="row">
                <div class="col-md-12">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label col-md-2">PName:</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.P_Name, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                            @Html.ValidationMessageFor(model => model.P_Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">EName:</label>
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.P_EId, ViewBag.Election as List<SelectListItem>, "---Select---", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.P_EId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<button>
    @Html.ActionLink("Back to List", "PostList")
</button>
